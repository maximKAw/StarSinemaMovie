<Window x:Class="MovieStarsWPF.ArtistInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MovieStarsWPF"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        WindowState="Normal"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen" 
        Title="Данные по артисту" Height="462.143" Width="1002"
        KeyDown="Window_KeyDown" 
        Loaded="ArtistWin_Loaded">
    <Grid Margin="0,0,-8,21">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="667*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="290*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderThickness="2,3,4,2" BorderBrush="Aqua" HorizontalAlignment="Left" Margin="10,23,0,27" Padding="40" CornerRadius="30" Width="950"
                >
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="LightCyan" Offset="0.0" />
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Margin="-20,-20,-20,-52">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="18"/>
                        <Setter Property="FontFamily" Value="Times New Roman"/>
                        <Setter Property="FontWeight" Value="Normal"/>
                    </Style>
                </StackPanel.Resources>
                <Grid Height="264">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="23*"/>
                        <ColumnDefinition Width="203*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Фамилия" HorizontalAlignment="Center" Margin="0,44,0,20" FontFamily="Times New Roman" FontSize="18" FontWeight="Normal" Width="78" />
                    <Label Content="Имя" HorizontalAlignment="Center" Margin="0,117,0,20" FontFamily="Times New Roman" FontSize="18" FontWeight="Normal" Width="80" />
                    <Label Content="Отчество" HorizontalAlignment="Center" Margin="0,190,0,20" FontFamily="Times New Roman" FontSize="18" FontWeight="Normal" Width="80" />
                    <Label x:Name="LabelChangeFoto" Content="Изменить" HorizontalAlignment="Left" Margin="540,10,0,212" FontFamily="Times New Roman" Foreground="Blue" FontSize="20" FontWeight="Bold" Width="100" Grid.Column="1" MouseDown="ChangeFoto" />
                    <Label x:Name="LabelDeleteFoto" Content="Удалить" HorizontalAlignment="Left" Margin="660,10,0,212" FontFamily="Times New Roman" Foreground="Red" FontSize="20" FontWeight="Bold" Width="100" Grid.Column="1" MouseDown="DeleteFoto" />
                    <TextBox x:Name="TextBoxFam" Grid.Column="1" MaxLines="20" MaxLength="20" FontSize="16" Margin="10,47,0,0" FontFamily="Times New Roman" HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" InputLanguageManager.InputLanguage="ru-RU" TabIndex="1"/>
                    <TextBox x:Name="TextBoxName" Grid.Column="1" MaxLines="20" MaxLength="20" FontSize="16" Margin="10,118,0,0" FontFamily="Times New Roman" HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" InputLanguageManager.InputLanguage="ru-RU" TabIndex="2"/>
                    <TextBox x:Name="TextBoxOtch" Grid.Column="1" MaxLines="20" MaxLength="20" FontSize="16" Margin="10,193,0,0" FontFamily="Times New Roman" HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" InputLanguageManager.InputLanguage="ru-RU" TabIndex="3"/>
                    <Image x:Name="ImageFoto" Height="Auto" Margin="505,44,26,0" Source="/ПустоеФото.jpg" Stretch="Fill" Grid.Column="1" MouseDown="ChangeFoto"/>
                </Grid>
            </StackPanel>
        </Border>
        <Button x:Name="Save" Content="Сохранить" HorizontalAlignment="Left" Margin="319,17,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Height="45" FontFamily="Times New Roman" FontSize="18" FontWeight="Normal" Click="Save_Click"/>
        <Button x:Name="Exit" Content="Выход" HorizontalAlignment="Left" Margin="566,17,0,0" Grid.Row="1" VerticalAlignment="Top" Width="119" Height="45" FontFamily="Times New Roman" FontSize="18" FontWeight="Normal" Click="Exit_Click"/>
    </Grid>
</Window>
