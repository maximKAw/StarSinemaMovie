<Window x:Class="MovieStarsWPF.BiographyArtist"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MovieStarsWPF"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        WindowState="Normal"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen" 
        Name ="BiographyA"  Title="Данные по биографии" Height="777" Width="647.577"
        KeyDown="Window_KeyDown" 
        Loaded="BiographyArtistWin_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="667*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="580*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderThickness="2,3,4,2" BorderBrush= " Aqua" HorizontalAlignment="Left" Margin="10,0,0,10" Padding="40" CornerRadius="30" Height="650" Width="600"
                >
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="Lavender" Offset="0.0" />
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Margin="-20" Height="580">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="18"/>
                        <Setter Property="FontFamily" Value="Times New Roman"/>
                        <Setter Property="FontWeight" Value="Normal"/>
                    </Style>
                </StackPanel.Resources>
                <Grid Height="606">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Дата рождения" HorizontalAlignment="Left" Margin="10,20,0,20" FontFamily="Times New Roman" FontSize="18" FontWeight="Normal" Width="130" />
                    <Label Content="ФИО матери" HorizontalAlignment="Left" Margin="10,100,0,20" FontFamily="Times New Roman" FontSize="18" FontWeight="Normal" Width="130" />
                    <Label Content="ФИО отца" HorizontalAlignment="Left" Margin="10,180,0,20" FontFamily="Times New Roman" FontSize="18" FontWeight="Normal" Width="130" />
                    <Label Content="Страна" HorizontalAlignment="Left" Margin="10,255,0,20" FontFamily="Times New Roman" FontSize="18" FontWeight="Normal" Width="130" />
                    <Label Content="Рост" HorizontalAlignment="Left" Margin="10,350,0,00" FontFamily="Times New Roman" FontSize="18" FontWeight="Normal" Width="130" />
                    <Label Content="Пол" HorizontalAlignment="Left" Margin="10,430,0,00" FontFamily="Times New Roman" FontSize="18" FontWeight="Normal" Width="130" />
                    <Label Content="Информация" HorizontalAlignment="Left" Margin="10,520,0,00" FontFamily="Times New Roman" FontSize="18" FontWeight="Normal" Width="130" />
                    <DatePicker Name="DataR" Margin="10,20,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="-0.775,-0.36" Width="116"
                                FontSize="18" FontFamily="Times New Roman" Text="23.12.2024" SelectedDate="{x:Static sys:DateTime.Now}" SelectedDateFormat="Short" Focusable="True" 
                                PreviewTextInput="Data1_PreviewTextInput" Height="37" Grid.Column="1" TabIndex="2"
                                />
                    <TextBox x:Name="TextBoxFIO_Mother" Grid.Column="1" MaxLines="30" MaxLength="30" FontSize="16" Margin="10,100,0,0" FontFamily="Times New Roman" HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" InputLanguageManager.InputLanguage="ru-RU" TabIndex="4"/>
                    <TextBox x:Name="TextBoxFIO_Father" Grid.Column="1" MaxLines="30" MaxLength="30" FontSize="16" Margin="10,170,0,0" FontFamily="Times New Roman" HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" InputLanguageManager.InputLanguage="ru-RU" TabIndex="4"/>
                    <TextBox x:Name="TextBoxCountry" Grid.Column="1" MaxLines="50" MaxLength="50" FontSize="16" Margin="10,255,0,0" FontFamily="Times New Roman" HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" InputLanguageManager.InputLanguage="ru-RU" TabIndex="4"/>
                    <TextBox x:Name="TextBoxRost" Grid.Column="1" MaxLines="3" MaxLength="3" FontSize="16" Margin="10,350,0,0" FontFamily="Times New Roman" HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" InputLanguageManager.InputLanguage="ru-RU" TabIndex="4"/>
                    <ComboBox x:Name="ComboBoxPol" Grid.Column="1" FontSize="14" Margin="10,430,0,0" FontFamily="Times New Roman" HorizontalAlignment="Left" VerticalAlignment="Top" Height="45" Width="380" TabIndex="8">
                        <ComboBoxItem Content="Мужской"/>
                        <ComboBoxItem Content="Женский"/>
                    </ComboBox>
                    <TextBox x:Name="TextBoxInform" Grid.Column="1" MaxLines="3" MaxLength="1500" FontSize="16" Margin="10,520,0,0" FontFamily="Times New Roman" HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" InputLanguageManager.InputLanguage="ru-RU" TabIndex="4"/>
                </Grid>
            </StackPanel>
        </Border>
        <Button x:Name="Save" Content="Сохранить" HorizontalAlignment="Left" Margin="142,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Height="45" FontFamily="Times New Roman" FontSize="18" FontWeight="Normal" Click="Save_Click"/>
        <Button x:Name="Exit" Content="Выход" HorizontalAlignment="Left" Margin="389,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="119" Height="45" FontFamily="Times New Roman" FontSize="18" FontWeight="Normal" Click="Exit_Click"/>
    </Grid>
</Window>
