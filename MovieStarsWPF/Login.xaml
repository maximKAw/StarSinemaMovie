<Window x:Class="MovieStarsWPF.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieStarsWPF"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        ResizeMode="CanMinimize"
        WindowState="Normal"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen" FontSize="16"
        Title="Авторизация" Height="410" Width="400" KeyDown="Window_KeyDown" Loaded="Window_Loaded">
    <Grid Background= "SkyBlue">
        <Border MinWidth="280" Margin="15,34,15,25" Background="Beige" VerticalAlignment="Center" Padding="40" MaxWidth="350" CornerRadius="20" Height="310">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Color="LightGray" ShadowDepth="0"></DropShadowEffect>
            </Border.Effect>
            <StackPanel Margin="0,-10,0,-21">
                <TextBlock Text="Логин" FontSize="20" FontWeight="Bold" FontFamily="Times New Roman" Margin="0 -30 0 10" Visibility="Hidden"/>
                <TextBox x:Name="TextBoxLogin" materialDesign:HintAssist.Hint="Введите логин" Margin="0 10 0 10" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="admin" KeyDown="TextBoxLogin_KeyDown" RenderTransformOrigin="0.5,0.5">
                </TextBox>
                <TextBox x:Name="TextBoxPassword" materialDesign:HintAssist.Hint="Введите пароль" Margin="0 20 0 10" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Text="admin" KeyDown="TextBoxLogin_KeyDown"/>
                <Grid Margin="0 20 0 5" Height="98">
                    <Button x:Name="Vhod" Margin="0 -10 0 10" HorizontalAlignment="Left" Content="Вход" Style="{StaticResource MaterialDesignFlatButton}" Click="ButtonVhod_Click" FontFamily="Times New Roman" FontSize="25"/>
                    <Button x:Name="Exit" Margin="0 -10 0 10" HorizontalAlignment="Right" Content="Выход" Style="{StaticResource MaterialDesignFlatButton}" Click="ButtonExit_Click" FontFamily="Times New Roman" FontSize="25"/>
                </Grid>
            </StackPanel>
        </Border>

    </Grid>
</Window>
