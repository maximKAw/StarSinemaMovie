<Window x:Class="MovieStarsWPF.SpravochnikWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieStarsWPF"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        WindowState="Normal"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen" 
        Name="Spravochnik" Title="Справочник &quot;Данные&quot;" 
        Height="500" Width="800" 
        KeyDown="Window_KeyDown" Loaded="Window_Loaded">
    <!--<Grid>-->
    <DockPanel Name="DockPanelSpr" Margin="8,54,8,3" Background="white" Height="460">
        <Border Name="BorderS" CornerRadius="30" BorderBrush="Aqua" BorderThickness="1,3,1,5" Margin="0,0,0,188">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="LightCyan" Offset="0.0" />
                </LinearGradientBrush>
            </Border.Background>


            <StackPanel HorizontalAlignment="Left" Height="269" Margin="5,5,0,-19" VerticalAlignment="Top" Width="578">
                <DataGrid x:Name="DBGridSpravochnik" AutoGenerateColumns="False" IsReadOnly="True" 
                          HorizontalAlignment="Left" Height="240" Margin="10,10,0,0" VerticalAlignment="Top" Width="558" 
                          CanUserAddRows="False" 
                          
                          MouseDoubleClick="DataGrid_MouseDoubleClick" 
                          >
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="18"/>
                            <Setter Property="Foreground" Value="#FF136C5C"/>
                            <Setter Property="FontFamily" Value="Times New Roman"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Название" Width="350" FontSize="14" FontStyle="Normal" FontFamily="Times New Roman" 
                            Binding="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Фото" Width="180" FontSize="14" FontStyle="Normal" FontFamily="Times New Roman" 
                            Binding="{Binding Path=StrFoto, UpdateSourceTrigger=PropertyChanged}"/>

                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
        <StackPanel Name="StackPanel_2" Background="#FFF0FAF9" HorizontalAlignment="Left" Height="105" Margin="-573,250,0,10" Width="560">
            <Label Name="LabelName" Content="Название" Margin="10,25,470,0"  FontSize="18" FontFamily="Times New Roman" Background="Transparent"/>
            <TextBox x:Name="DBEdit_Nazvanie" Margin="125,-5,10,0" Height="38" MaxLines="150" TextWrapping="Wrap" 
                     Text="{Binding Path=Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="16" FontFamily="Times New Roman" KeyDown="DBEdit_Nazvanie_KeyDown"
                     InputLanguageManager.InputLanguage="ru-RU" MaxLength="150"
                      />
            <TextBox x:Name="DBEdit_Cena" Margin="125,-35,10,0" Height="38" MaxLines="250" TextWrapping="Wrap" 
                     Text="{Binding Path=Cena, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="16" FontFamily="Times New Roman" Visibility="Hidden" KeyDown="DBEdit_Nazvanie_KeyDown"                     
                      />
        </StackPanel>
        <Canvas Background="White" Margin="0,0,0,188" Width="149" Height="325">
            <Button x:Name="Knopka_Add" Content="Добавить" Height="44" Canvas.Left="23" Canvas.Top="18" FontFamily="Times New Roman" FontSize="18" FontWeight="Normal" Width="110" Click="Knopka_Add_Click"/>
            <Button x:Name="Knopka_Change" Content="Изменить" Height="44" Canvas.Left="23" Canvas.Top="79" Width="110" FontFamily="Times New Roman" FontSize="18" FontWeight="Normal" Click="Knopka_Change_Click"/>
            <Button x:Name="Knopka_Delete" Content="Удалить" Canvas.Left="23" Canvas.Top="142" FontFamily="Times New Roman" FontSize="18" FontWeight="Normal" Width="110" Height="44" Click="Knopka_Delete_Click"/>
            <Button x:Name="Knopka_Foto" Content="Фото" Canvas.Left="23" Canvas.Top="203" FontFamily="Times New Roman" FontSize="18" FontWeight="Normal" Width="110" Height="44" Click="Foto_Click" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="Exit" Content="Выход" Canvas.Left="23" Canvas.Top="270" FontFamily="Times New Roman" FontSize="18" FontWeight="Normal" Width="110" Height="44" Click="Exit_Click" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>

    </DockPanel>
    <!--</Grid>-->
</Window>
